@model List<LifeSureApp.Models.DataModels.Tbl_Employee>
<div class="container-fluid team pb-5">
    <div class="container pb-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h4 class="text-primary">Our Team</h4>
            <h1 class="display-4 mb-4">Ekibimizle Tanışın</h1>
            <p class="mb-0">
                Hizmetlerimizin arkasındaki özverili profesyonellerle tanışın. Deneyimli ekibimiz, size güvenilir rehberlik, esnek çözümler ve en önemli varlıklarınızı korumak için ihtiyaç duyduğunuz desteği sağlamak için yorulmadan çalışır.
            </p>
        </div>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.2s">



                    <div class="team-item">

                        <div class="team-img">
                            <img src="@item.EmployeePhotoURL" class="img-fluid rounded-top w-100" alt="">
                            <div class="team-icon">
                                <a class="btn btn-primary btn-sm-square rounded-pill mb-2" href="@item.EmployeeFacebook"><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-primary btn-sm-square rounded-pill mb-2" href="@item.EmployeeX"><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-primary btn-sm-square rounded-pill mb-2" href="@item.EmployeeLinkedin"><i class="fab fa-linkedin-in"></i></a>
                                <a class="btn btn-primary btn-sm-square rounded-pill mb-0" href="@item.EmployeeInstagram"><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                        <div class="team-title p-4">
                            <h4 class="mb-0">@item.EmployeeFullName</h4>
                            <p class="mb-0">@item.EmployeeTitle</p>
                        </div>

                    </div>

                </div>
            }
        </div>
    </div>
</div>