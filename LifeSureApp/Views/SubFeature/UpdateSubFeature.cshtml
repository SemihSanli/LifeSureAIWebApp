@model LifeSureApp.Models.DataModels.Tbl_SubFeature
@{
    ViewBag.Title = "Alt Özellik Güncelle";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-light shadow-lg border-0">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fa fa-star text-warning me-2"></i>Alt Özellik Güncelle</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("UpdateSubFeature", "SubFeature", FormMethod.Post))
                    {
                        @Html.HiddenFor(m => m.SubFeatureId)
                        <div class="mb-3">
                            <label for="SubFeatureIcon" class="form-label text-info">İkon Sınıfı (FontAwesome)</label>
                            @Html.TextBoxFor(m => m.SubFeatureIcon, new { @class = "form-control bg-dark text-info border-info", placeholder = "fa fa-star veya başka bir ikon sınıfı" })
                        </div>
                        <div class="mb-3">
                            <label for="SubFeatureTitle" class="form-label text-primary">Başlık</label>
                            @Html.TextBoxFor(m => m.SubFeatureTitle, new { @class = "form-control bg-dark text-primary border-primary", placeholder = "Başlık" })
                        </div>
                        <div class="mb-3">
                            <label for="SubFeatureDescription" class="form-label text-success">Açıklama</label>
                            @Html.TextAreaFor(m => m.SubFeatureDescription, new { @class = "form-control bg-dark text-success border-success", placeholder = "Açıklama", rows = 3 })
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <a href="/SubFeature/SubFeatureList" class="btn btn-outline-light">
                                <i class="fa fa-arrow-left me-1"></i> Geri Dön
                            </a>
                            <button type="submit" class="btn btn-info text-white">
                                <i class="fa fa-save me-1"></i> Kaydet
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- FontAwesome CDN for icons (if not already included) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

