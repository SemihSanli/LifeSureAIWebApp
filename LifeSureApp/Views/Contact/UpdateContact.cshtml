@model LifeSureApp.Models.DataModels.Tbl_Contact
@{
    ViewBag.Title = "İletişim Bilgisi Güncelle";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-light shadow-lg border-0">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0">İletişim Bilgisi Güncelle</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("UpdateContact", "Contact", FormMethod.Post))
                    {
                        @Html.HiddenFor(m => m.ContactId)
                        <div class="mb-3">
                            <label for="ContactEmail" class="form-label">E-posta</label>
                            @Html.TextBoxFor(m => m.ContactEmail, new { @class = "form-control bg-dark text-light border-secondary", placeholder = "E-posta adresi" })
                        </div>
                        <div class="mb-3">
                            <label for="ContactAddress" class="form-label">Adres</label>
                            @Html.TextBoxFor(m => m.ContactAddress, new { @class = "form-control bg-dark text-light border-secondary", placeholder = "Adres" })
                        </div>
                        <div class="mb-3">
                            <label for="ContactPhone" class="form-label">Telefon</label>
                            @Html.TextBoxFor(m => m.ContactPhone, new { @class = "form-control bg-dark text-light border-secondary", placeholder = "Telefon numarası" })
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <a href="/Contact/ContactList" class="btn btn-outline-light">
                                <i class="fa fa-arrow-left me-1"></i> Geri Dön
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-save me-1"></i> Kaydet
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- FontAwesome CDN for icons (if not already included) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

