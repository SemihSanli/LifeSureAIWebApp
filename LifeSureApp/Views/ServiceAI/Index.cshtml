@model List<LifeSureApp.Models.DataModels.Tbl_Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<style>
    .section-header-service {
        background: linear-gradient(90deg, #23272f 0%, #2d323c 100%);
        border-radius: 16px;
        box-shadow: 0 4px 18px 0 rgba(31, 38, 135, 0.10);
        padding: 24px 32px 20px 32px;
        margin-bottom: 32px;
        margin-top: 32px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-left: 6px solid #43e97b;
    }

    .section-header-title {
        color: #fff;
        font-size: 1.45rem;
        font-weight: 700;
        letter-spacing: 0.5px;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 12px;
        text-shadow: 0 2px 8px rgba(33,150,243,0.08);
    }

        .section-header-title i {
            color: #43e97b;
            font-size: 1.6rem;
        }

    .btn-add {
        background: linear-gradient(90deg, #43e97b 0%, #38f9d7 100%);
        color: #222;
        font-weight: 600;
        border-radius: 30px;
        padding: 10px 22px;
        font-size: 1.08rem;
        border: none;
        transition: background 0.2s, color 0.2s;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        display: inline-flex;
        align-items: center;
        gap: 6px;
        text-decoration: none;
    }

        .btn-add:hover {
            background: linear-gradient(90deg, #38f9d7 0%, #43e97b 100%);
            color: #111;
            text-decoration: none;
        }

    .service-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
        gap: 32px;
        margin-bottom: 32px;
    }

    .service-card {
        background: #23272f;
        border-radius: 18px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18);
        padding: 28px 24px 20px 24px;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 320px;
        position: relative;
        border: none;
        transition: box-shadow 0.2s, transform 0.2s;
    }

        .service-card:hover {
            box-shadow: 0 12px 32px 0 rgba(31, 38, 135, 0.28);
            transform: translateY(-4px) scale(1.01);
        }

    .service-card-img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 12px;
        margin-bottom: 18px;
        box-shadow: 0 2px 8px rgba(33,150,243,0.10);
        background: #fff;
    }

    .service-card-title {
        color: #90caf9;
        font-size: 1.15rem;
        font-weight: 600;
        margin-bottom: 8px;
        text-align: center;
        word-break: break-word;
    }

    .service-card-desc {
        color: #e0e0e0;
        font-size: 1.01rem;
        margin-bottom: 12px;
        text-align: center;
        word-break: break-word;
    }

    .service-card-icon {
        font-size: 2rem;
        color: #43e97b;
        margin-bottom: 10px;
    }
</style>

<div class="section-header-service">
    <span class="section-header-title">
        <i class="fas fa-cogs"></i>
       AI İle Üretilmiş Hizmet Bilgileri
    </span>
    <a href="/ServiceAI/GenerateImage" class="btn btn-add">
        <i class="fas fa-plus-circle me-1"></i>Yeni Hizmet Ekle
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center mt-3">
        Henüz hiç hizmet eklenmemiş. 👀
    </div>
}
else
{
    <div class="service-card-grid">
        @foreach (var item in Model)
        {
            count++;
            <div class="service-card">
                <img src="@item.ServiceImage" alt="Hizmet Görseli" class="service-card-img" />
                <div class="service-card-title">@item.ServiceTitle</div>
            </div>
        }
    </div>
}